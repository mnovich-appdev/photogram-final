<div>
  <div>
    <h1>
      List of Photos
    </h1>
  </div>
</div>

<div>
  <div>
    <h2>
      Add a new photo
    </h2>

    <form action="/insert_photo" method="post">
      <div>
        <label for="caption_box">
          Caption
        </label>

        <textarea id="caption_box" name="query_caption" rows="3"></textarea>
      </div>

      <div>
        <label for="comments_count_box">
          Comments count
        </label>

        <input type="text" id="comments_count_box" name="query_comments_count">
      </div>

      <div>
        <label for="likes_count_box">
          Likes count
        </label>

        <input type="text" id="likes_count_box" name="query_likes_count">
      </div>

      <div>
        <label for="owner_id_box">
          Owner
        </label>

        <input type="text" id="owner_id_box" name="query_owner_id">
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image">
      </div>

      <button>
        Create photo
      </button>
    </form>
  </div>
</div>

<div>
  <table border="1">

    <tr>

      <th>
        Image
      </th>

      <th>
        Caption
      </th>

      <th>
        Owner
      </th>

      <th>
        Posted
      </th>

      <th>
        Likes
      </th>

      <th>
      </th>

    </tr>

    <% @list_of_photos.each do |display| %>
    <% if display.photo_owner.private == false %>

    <tr>

      <td>
        <img src="<%= display.image %>">
      </td>

      <td>
        <%= display.caption %>
      </td>

      <td>
        <%= display.photo_owner.username %>
      </td>

      <td>
        <%= time_ago_in_words(display.created_at) %>
      </td>

      <td>
        <%= display.likes_count %>
      </td>

      <td>
        <a href="/photos/<%= display.id %>">
          Show Details
        </a>
      </td>

    </tr>

    <% end %>
    <% end %>

  </table>
</div>